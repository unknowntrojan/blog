<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% render "head", metadata: site.metadata, title: data.title %}
  </head>
  <body class="{{ data.layout }} {{ data.page_class }}">
    <div class="flex flex-col h-screen justify-between">
      {% render "navbar", metadata: site.metadata, resource: resource %}

      <div class="flex flex-row mt-16 mb-auto w-5/6 mx-auto">
        <div class="{% if data.toc %}toc-div {% else %} mt-0 p-4 {% endif %} mb-auto w-1/4">
          {% if data.toc %}
            <h1>Contents</h1>
            {{ content | toc_only }}
          {% endif %}
        </div>
        <main class="p-8 mt-0 w-4/5">
          {{ content }}
        </main>

        <div class="w-1/4 mt-0 p-4"></div>
      </div>

      {% render "footer", metadata: site.metadata %}
    </div>
  </body>
</html>